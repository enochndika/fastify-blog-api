  "license": "MIT",
  "author": {
    "name": "Enoch Ndika"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/app.server.js",
    "dev": "nodemon src/app.server.ts",
    "format": "prettier '*/**/*.{js,ts,tsx,ts}' --write",
    "lint": "prettier '*/**/*.{js,ts,tsx,ts}' --fix",
    "prepare": "husky install"
  },
  "prisma": {
    "schema": "src/prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^3.2.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.27.0",
    "dotenv": "^10.0.0",
    "fastify": "^3.21.6",
    "fastify-cors": "^6.0.2",
    "fastify-file-upload": "^3.0.0",
    "fastify-formidable": "^1.0.0",
    "fastify-jwt": "^3.1.0",
    "fastify-plugin": "^3.0.0",
    "make-promises-safe": "^5.1.0",
    "module-alias": "^2.2.2",
    "slugify": "^1.6.1",
    "underscore": "^1.13.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/faker": "^5.5.8",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^16.10.2",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "faker": "^5.5.3",
    "husky": "^7.0.0",
    "lint-staged": "^11.1.2",
    "nodemon": "^2.0.13",
    "prettier": "^2.4.1",
    "prisma": "^3.1.1",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint '*/**/*.{js,ts}' --fix",
      "prettier '*/**/*.{js,ts}' --write"
    ]
  },
  "engines": {
    "node": "^14.x"
  }
}
